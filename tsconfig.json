{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "routes/**/*", "utils/**/*", "server.ts", "config/**/*", "controllers/**/*", "core/**/*", "middleware/**/*", "models/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "test/**/*", "debug-*.ts", "test-*.ts"]
}
